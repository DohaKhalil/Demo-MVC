@model Deparntment
@{
    ViewData["Title"] = "Edit";
}
<head>
    <link href="~/css/StyleSheetDepartment.css" rel="stylesheet" />

</head>
<body class="text-light">
    <div class="ObasatySitting">

<form method="post" asp-action="Edit">
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Code</label>
        <input class="form-control" id="formGroupExampleInput" placeholder="Example input Code" asp-for="Code">
        <span asp-validation-for="Code" class="alert-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Name</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Name" asp-for="Name">
        <span asp-validation-for="Name" class="alert-danger"></span>

    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Create At</label>
        <input class="form-control" id="formGroupExampleInput2" asp-for="CreatedAt">
        <span asp-validation-for="CreatedAt" class="alert-danger"></span>

    </div>

    <div class="p-2">
        <center>
            <button type="submit" class="btn btn-primary mt-3 , p-2 , w-50">Submit</button>
            <button asp-action="Index" type="submit" class="btn btn-info mt-2 , w-50">Back to List</button>
        </center>
    </div>

</form>
</div>
</body>

